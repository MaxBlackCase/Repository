<Window x:Class="Events.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Events"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="350"
        Width="500"
        Background="#212121">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <StackPanel x:Name="menuSelector"
                Grid.Column="0"
                RadioButton.Checked="RadioButton_Click">
      <RadioButton GroupName="menu"
                   Content="Салат Оливье"
                   Foreground="#fff" />
      <RadioButton GroupName="menu"
                   Content="Котлета по-киевски"
                   Foreground="#fff" />
      <RadioButton GroupName="menu"
                   Content="Пицца с овощами"
                   Foreground="#fff" />
      <RadioButton GroupName="menu"
                   Content="Мясной рулет"
                   Foreground="#fff" />
    </StackPanel>
    <TextBlock Grid.Column="1"
               Margin="10"
               TextWrapping="Wrap"
               x:Name="tBlock1"
               Foreground="#fff"></TextBlock>
  </Grid>
</Window>
